{
    "name": "micro/plugin-logger-core",
    "description": "Micro Framework: Logger plugin",
    "license": "MIT",
    "type": "micro-plugin",
    "authors": [
        {
            "name": "Stanislau.Komar",
            "email": "stanislau_komar@epam.com"
        }
    ],
    "require": {
        "micro/kernel": "^2.0",
        "micro/kernel-boot-configuration": "^2.0",
        "micro/kernel-boot-dependency": "^2.0",
        "psr/log": "^1 || ^2 || ^3"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.34"
    },
    "autoload": {
        "psr-4": {
            "Micro\\Plugin\\Logger\\": "/"
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    },
    "minimum-stability": "dev"
}
